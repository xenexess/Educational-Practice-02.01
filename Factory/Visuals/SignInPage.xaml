<Page x:Class="Factory.Visuals.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Factory.Visuals"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Логин:"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox Name="TxbPassword"/>
            <Button Height="20" Content="Войти" Margin="10" Click="ButtonIn_Click"/>
        </StackPanel>
    </Grid>
</Page>
